{
    "builders": [
        {
            "ami_name": "opencast{{ user `opencast_major_version` }}-allinone {{timestamp}}",
            "ami_description": "Opencast {{ user `opencast_version` }} AllInOne, base on {{ .SourceAMIName }}",
            "ami_groups": [ ],
            "instance_type": "t2.micro",
            "name": "allinone",
            "region": "us-east-1",
            "source_ami_filter": {
                "filters": {
                    "name": "amzn2-ami-hvm-2.0.*-x86_64-gp2",
                    "root-device-type": "ebs",
                    "virtualization-type": "hvm"
                },
                "owners": ["amazon"],
                "most_recent": true
            },
            "ssh_username": "ec2-user",
            "run_tags": {
                "Name": "opencast{{ user `opencast_major_version` }}-allinone",
                "Version": "{{ user `opencast_version` }}"
            },
            "tags": {
                "Name": "opencast{{ user `opencast_major_version` }}-allinone",
                "Version": "{{ user `opencast_version` }}",
                "Host": "allinone",
                "Service": "opencast",
                "OS_Version": "Amazon Linux 2",
                "Base_AMI_Name": "{{ .SourceAMIName }}"
            },
            "type": "amazon-ebs"
        }
    ],
    "provisioners": [
        {
            "extra_arguments": [
                "-v", "--diff",
                "--extra-vars=build_ami=true",
                "--extra-vars=repo_username={{ user `opencast_repo_username` }}",
                "--extra-vars=repo_password={{ user `opencast_repo_password` }}",
                "--ssh-extra-args=-o IdentitiesOnly=yes"
             ],
            "empty_groups": [
                "fileserver",
                "adminworker",
                "adminpresentation",
                "worker",
                "presentation",
                "ingest"
            ],
            "groups": [
                "allinone",
                "activemq",
                "database",
                "opencast",
                "admin_node",
                "presentation_node"
            ],
            "host_alias": "allinone.ami.opencast.org",
            "inventory_directory": "packer_inventory",
            "playbook_file": "{{ user `playbook_home` }}/opencast.yml",
            "type": "ansible",
            "user": "ec2-user"
        }
    ],
    "variables": {
        "opencast_major_version": "6",
        "opencast_version": "6.5",
        "opencast_repo_username": "",
        "opencast_repo_password": "",
        "playbook_home": "oc-config-management"
    }
}